{
    "name": "C++ Development with CMake and Bazel",
    "dockerFile": "Dockerfile",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-vscode.cmake-tools",
                "ms-vscode.cpptools",
                "ms-vscode.cpptools-extension-pack",
                "fredericbonnet.cmake-test-adapter",
                "twxs.cmake",
                "xaver.clang-format",
                "AndreasNonslidHvardsen.clang-tidy-on-active-file",
                "ryanluker.vscode-coverage-gutters",
                "streetsidesoftware.code-spell-checker",
                "cschlosser.doxdocgen"
            ]
        }
    },
    "mounts": [
        "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
        "source=${env:HOME}/.ssh,target=/home/vscode/.ssh,type=bind,consistency=cached",
        "source=history,target=/commandhistory,type=volume"
    ],
    "workspaceFolder": "/workspace",
    "runArgs": [
        "--cap-add=SYS_PTRACE",
        "--security-opt",
        "seccomp=unconfined"
    ],
    "remoteUser": "vscode",
    "postStartCommand": "./tools/qa compilationdb --build-path=build-code-quality"
}
