{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Create build directory",
            "type": "shell",
            "command": "mkdir -p build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "CMake",
            "type": "shell",
            "command": "cmake .. -DCMAKE_BUILD_TYPE=Debug -DENABLE_TESTS=ON -DENABLE_COVERAGE=ON -DENABLE_ASAN=OFF",
            "dependsOn": "Create build directory",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        },
        {
            "label": "Build Project",
            "type": "shell",
            "command": "cmake --build . --config Debug --target tests",
            "dependsOn": "CMake",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "ctest -C Debug --verbose -R zip_test",
            "dependsOn": "Build Project",
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        },
        {
            "label": "Generate Coverage Report",
            "type": "shell",
            "command": "lcov --directory . --capture --initial --output-file coverage_base.info && lcov --directory . --capture --output-file coverage_test.info && lcov --add-tracefile coverage_base.info --add-tracefile coverage_test.info --output-file coverage.info && lcov --remove coverage.info '/usr/*' '*/tests/*' '*gtest*' '*gmock*' '*/external/*' --output-file coverage_filtered.info && genhtml coverage_filtered.info --output-directory coverage_html",
            "dependsOn": "Run Tests",
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "options": {
                "cwd": "${workspaceFolder}/build"
            },
            "problemMatcher": []
        }
    ]
}
